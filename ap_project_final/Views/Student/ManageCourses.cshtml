@model IEnumerable<ap_project_final.Models.Course>
    @{
    ViewBag.Title = "My Courses";
    }
    <h2>My Courses</h2>
    <ul>
        @foreach (var course in Model)
    {
        <li>
            <span style="display:inline-block;">
                @course.CourseCode
            </span>
            <a href="/Student/CourseDetails/@course.Id" style="margin-left:10px;">Details</a>
            <form method="post" asp-action="DropCourse" asp-route-courseId="@course.Id" style="display:inline;">
                <button type="submit">Remove</button>
            </form>
        </li>
    }
    </ul>
<a href="/Student/Index">Back</a>