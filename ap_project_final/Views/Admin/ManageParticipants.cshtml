@model ap_project_final.Models.Course

<h2>Manage Participants for @Model.CourseCode</h2>

<!-- Show course details -->
<p>Title: @Model.Title</p>
<p>Professor: @Model.Professor.LastName</p>
<!-- etc. -->
<!-- List students -->
<h3>Enrolled Students:</h3>
<ul>
    @if(Model.Enrollments!=null){
    @foreach (var enrollment in Model.Enrollments)
    {
        <li>@enrollment.Student.LastName</li>
    }
    }
</ul>

<h4>Add Student by ID</h4>
<form method="post" asp-action="AddStudentToCourse" asp-route-courseId="@Model.Id">
    <input type="text" name="studentId" placeholder="Enter Student ID" class="form-control" style="width:200px;" />
    <button type="submit" class="btn btn-success" style="margin-top:10px;">Add Student</button>
</form>

<h4>Remove Student by ID</h4>
<form method="post" asp-action="RemoveStudentFromCourse" asp-route-courseId="@Model.Id">
    <input type="text" name="studentId" placeholder="Enter Student ID" class="form-control" style="width:200px;" />
    <button type="submit" class="btn btn-danger" style="margin-top:10px;">Remove Student</button>
</form>

<!-- Link back or other actions -->
<a href="/Admin/Index">Back</a>