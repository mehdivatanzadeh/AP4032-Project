

@{
    ViewBag.Title = "Manage Users";
}

<h2>Manage Users</h2>

<h3>Students</h3>
<ul>
    @foreach (var student in Model.Students)
    {
        <li>
            @student.Name
            <button style="margin-left:10px;" onclick="location.href='/Admin/RemoveStudent/@student.Id'">Remove</button>
        </li>
    }
</ul>
<button style="margin-top:10px;" onclick="location.href='/Admin/AddStudent'">Add Student</button>

<h3>Instructors</h3>
<ul>
    @foreach (var instructor in Model.Instructors)
    {
        <li>
            @instructor.Name
            <button style="margin-left:10px;" onclick="location.href='/Admin/RemoveInstructor/@instructor.Id'">Remove</button>
        </li>
    }
</ul>
<button style="margin-top:10px;" onclick="location.href='/Admin/AddInstructor'">Add Instructor</button>