@model ap_project_final.Models.Student
<h3>Add Student</h3>

<form method="post" asp-action="AddStudent" asp-controller="Admin" style="max-width:400px; margin:auto;">
    @Html.AntiForgeryToken()
    <!-- Student ID -->
    <div style="margin-bottom:10px;">
        <label asp-for="StudentId">Student ID:</label><br />
        <input asp-for="StudentId" style="width:100%;" required />
    </div>

    <!-- First Name -->
    <div style="margin-bottom:10px;">
        <label asp-for="FirstName">First Name:</label><br />
        <input asp-for="FirstName" style="width:100%;" required />
    </div>

    <!-- Last Name -->
    <div style="margin-bottom:10px;">
        <label asp-for="LastName">Last Name:</label><br />
        <input asp-for="LastName" style="width:100%;" required />
    </div>

    <!-- Email -->
    <div style="margin-bottom:10px;">
        <label asp-for="Email">Email:</label><br />
        <input asp-for="Email" type="email" style="width:100%;" required />
    </div>

    <!-- Password -->
    <div style="margin-bottom:10px;">
        <label asp-for="Password">Password:</label><br />
        <input asp-for="Password" type="password" style="width:100%;" required />
    </div>

    <!-- Entry Date -->
    <div style="margin-bottom:10px;">
        <label asp-for="EntryDate">Entry Date:</label><br />
        <input asp-for="EntryDate" type="date" style="width:100%;" required />
    </div>

    <button type="submit" style="padding:8px 16px;">Add Student</button>
</form>

@if (TempData["Message"] != null)
{
    <div class="alert alert-success">
        @TempData["Message"]
    </div>
}