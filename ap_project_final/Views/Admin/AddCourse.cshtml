@model ap_project_final.Models.Course

<h3>Add Course</h3>

<form method="post" asp-action="AddCourse" asp-controller="Admin" style="max-width:500px; margin:auto;">
    @Html.AntiForgeryToken()

    <!-- Course Code -->
    <div style="margin-bottom:10px;">
        <label asp-for="CourseCode">Course Code:</label>
        <input asp-for="CourseCode" class="form-control" required />
        <span asp-validation-for="CourseCode" class="text-danger"></span>
    </div>

    <!-- Title -->
    <div style="margin-bottom:10px;">
        <label asp-for="Title">Title:</label>
        <input asp-for="Title" class="form-control" required />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <!-- Description -->
    <div style="margin-bottom:10px;">
        <label asp-for="Description">Description:</label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <!-- Units -->
    <div style="margin-bottom:10px;">
        <label asp-for="Units">Units:</label>
        <input asp-for="Units" type="number" min="1" class="form-control" required />
        <span asp-validation-for="Units" class="text-danger"></span>
    </div>

    <!-- Exam Date -->
    <div style="margin-bottom:10px;">
        <label asp-for="ExamDate">Exam Date:</label>
        <input asp-for="ExamDate" type="date" class="form-control" required />
        <span asp-validation-for="ExamDate" class="text-danger"></span>
    </div>

    <!-- Class Day -->
    <div style="margin-bottom:10px;">
        <label asp-for="ClassDay">Class Day:</label>
        <select asp-for="ClassDay" class="form-control" required>
            <option value="">Select Day</option>
            <option value="Monday">Monday</option>
            <option value="Tuesday">Tuesday</option>
            <option value="Wednesday">Wednesday</option>
            <option value="Thursday">Thursday</option>
            <option value="Friday">Friday</option>
            <option value="Saturday">Saturday</option>
            <option value="Sunday">Sunday</option>
        </select>
        <span asp-validation-for="ClassDay" class="text-danger"></span>
    </div>

    <!-- Start Time -->
    <div style="margin-bottom:10px;">
        <label asp-for="StartTime">Start Time:</label>
        <input asp-for="StartTime" type="time" class="form-control" required />
        <span asp-validation-for="StartTime" class="text-danger"></span>
    </div>

    <!-- Professor dropdown -->
    <div style="margin-bottom:10px;">
        <label for="ProfessorId">Select Professor:</label>
        <select asp-for="ProfessorId" class="form-control" asp-items="ViewBag.Professors" required>
            <option value="">-- Select Professor --</option>
        </select>
        <span asp-validation-for="ProfessorId" class="text-danger"></span>
    </div>

    <!-- Classroom dropdown -->
    <div style="margin-bottom:10px;">
        <label for="ClassroomId">Select Classroom:</label>
        <select asp-for="ClassroomId" class="form-control" asp-items="ViewBag.Classrooms" required>
            <option value="">-- Select Classroom --</option>
        </select>
        <span asp-validation-for="ClassroomId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Add Course</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<button onclick="location.href='/Admin/CoursesList'" style="margin-top:10px;">Back</button>