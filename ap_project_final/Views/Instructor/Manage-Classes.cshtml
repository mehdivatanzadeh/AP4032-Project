@model YourNamespace.Models.ClassDetailsViewModel

@{
    ViewBag.Title = "Manage Class Details";
}

<h2>Class: @Model.ClassName</h2>

<table style="width:100%; border-collapse: collapse;">
    <thead>
        <tr>
            <th style="border: 1px solid #ddd; padding: 8px;">Student Name</th>
            <th style="border: 1px solid #ddd; padding: 8px;">Score</th>
            <th style="border: 1px solid #ddd; padding: 8px;">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var student in Model.Students)
        {
        <tr>
            <td style="border: 1px solid #ddd; padding: 8px;">@student.Name</td>
            <td style="border: 1px solid #ddd; padding: 8px;">
                <form method="post" action="/Instructor/UpdateScore">
                    <input type="hidden" name="studentId" value="@student.Id" />
                    <input type="hidden" name="classId" value="@Model.ClassId" />
                    <input type="number" name="score" value="@student.Score" style="width: 80px;" />
                    <button type="submit">Update</button>
                </form>
            </td>
            <td style="border: 1px solid #ddd; padding: 8px;">
                <form method="post" action="/Instructor/RemoveStudentFromClass">
                    <input type="hidden" name="studentId" value="@student.Id" />
                    <input type="hidden" name="classId" value="@Model.ClassId" />
                    <button type="submit" style="background-color: red; color: white;">Remove</button>
                </form>
            </td>
        </tr>
        }
    </tbody>
</table>

<div style="margin-top: 40px;">
    <button onclick="location.href='/Instructor/Classes'">Back to My Classes</button>
</div>